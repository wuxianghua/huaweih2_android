<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/margin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f2f7f9"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="电影院"
        android:textColor="#565c60"
        android:textSize="15sp"/>

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scaleType="fitXY"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:src="@drawable/cutline_new"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="15dp"
            android:background="@drawable/image5_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星巴克"
                    android:textColor="#565c60"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咖啡店"
                    android:textColor="#94999d"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ico_p_marker_blue"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="shanghai"
                    android:textColor="#1fafe7"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="800m"
                    android:textColor="#94999d"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scaleType="fitXY"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:src="@drawable/cutline_new"/>-->
    </LinearLayout>






</LinearLayout>