<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_grid">
    //地图容器
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/show_car_number_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/bg_cir_car_number">
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空余车位"
                    android:textSize="7pt"
                    android:textColor="@color/color_38bc7c"
                    />
                <TextView
                    android:id="@+id/tv_nocar_num"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_38bc7c"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:text="---"/>
            </LinearLayout>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="B1"
                android:textStyle="italic"
                android:textColor="@color/color_666666"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_xie"/>
            <LinearLayout
                android:paddingRight="20dp"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占用车位"
                    android:textSize="7pt"
                    android:textColor="@color/color_ef6c60"
                    />
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/tv_car_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ef6c60"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:text="---"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/map_style_change"
            android:background="@drawable/bg_cir_style_change"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:gravity="center"
            android:text="2D"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_475266"
            android:textSize="17dp"
            android:layout_height="40dp" />
        <Button
            android:layout_below="@+id/map_style_change"
            android:id="@+id/map_facilities"
            android:text="公共设施"
            android:background="@drawable/bg_cir_style_change"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/color_475266"
            android:textSize="15dp"
            android:layout_height="40dp" />

