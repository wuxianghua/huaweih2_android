<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292c2d">

    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/white">-->

    <!--</FrameLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:textSize="18sp"
            android:textColor="#1fafe7"
            android:layout_alignParentTop="true"
            android:text="摇一摇手机，获取更多资讯信息"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/loca"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_y_marker" />

        <TextView
            android:id="@+id/locName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="ICS"
            android:textColor="#565c60"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/big"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/shakebar_buttom_blue"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img"
            android:layout_width="96dp"
            android:layout_height="68dp"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:scaleType="centerCrop" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:lineSpacingExtra="6sp"
                android:lines="2"
                android:text="title"
                android:textColor="#fefefe"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">





        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:clipChildren="false"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_marginTop="128dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shakeit_map" />

            <ImageView
                android:id="@+id/img_up"
                android:scaleType="centerCrop"
                android:layout_above="@+id/center_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shakeit_up"/>
            <FrameLayout
                android:id="@+id/center_line"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_down"
                android:layout_below="@+id/center_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shakeit_down" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_finish"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shakeit" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>