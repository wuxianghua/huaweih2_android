<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_footprint_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="com.palmap.demo.huaweih2.FootprintDetailsActivity">

    <com.palmap.demo.huaweih2.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@android:color/white"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_tab3"
            android:layout_width="wrap_content"
            android:layout_height="400dp" />

        <TextView
            android:textSize="10sp"
            android:textColor="#94999d"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_time"
            android:layout_below="@+id/imageView"
            android:text="2016年9月28日 15:23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="10sp"
            android:textColor="#94999d"
            android:id="@+id/tv_location"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/tv_time"
            android:text="ICS实验室"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:textColor="#565c60"
            android:id="@+id/tv_details"
            android:layout_below="@+id/tv_time"
            android:layout_alignLeft="@+id/tv_time"
            android:layout_marginTop="15dp"
            android:text="ICS实验室"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
