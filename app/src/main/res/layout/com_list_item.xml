<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/com_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客"
            android:textColor="#2f3336"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/com_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/com_name"
            android:layout_marginLeft="5dp"
            android:text=" 2016.12.12"
            android:textColor="#2f3336"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/com_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_name"
            android:text="评论评论评论"
            android:textColor="#2f3336"
            android:textSize="14sp"/>
    </RelativeLayout>
