<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_poi_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    tools:context="com.palmap.demo.huaweih2.PoiInfoActivity">

    <RelativeLayout
        android:id="@+id/co"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/poi_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:text="ICS实验室"
            android:background="@drawable/poi_title"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:lineSpacingExtra="7sp"
            android:layout_below="@+id/title"
            android:textColor="#94999d"
            android:maxLines="12"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="华为"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/co"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ico_infor_close"/>
</RelativeLayout>
