<?xml version="1.0" encoding="utf-8"?>
<com.palmap.demo.huaweih2.view.PullableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout
        android:id="@+id/activity_da_ting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题栏-->
        <com.palmap.demo.huaweih2.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">
        </com.palmap.demo.huaweih2.view.TitleBar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/h2_foyer_max"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:src="@drawable/h2_foyer_min_1"
               android:layout_weight="1"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:src="@drawable/h2_foyer_min_2"
               android:layout_weight="1"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:src="@drawable/h2_foyer_min_3"
               android:layout_weight="1"/>
       </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingExtra="7sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:textColor="#2f3336"
            android:text="@string/hall"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="#2f3336"
                android:text=" 评论"/>
            <ImageView
                android:id="@+id/btn_com"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ico_tab_message"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/com_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/com_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/com_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2f3336"
                    android:text="访客"/>
                <TextView
                    android:id="@+id/com_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/com_name"
                    android:textSize="14sp"
                    android:textColor="#2f3336"
                    android:text="-2016.12.12"/>
                <TextView
                    android:id="@+id/com_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/com_name"
                    android:textSize="14sp"
                    android:textColor="#2f3336"
                    android:text="评论评论评论"/>
            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>
</com.palmap.demo.huaweih2.view.PullableScrollView>
